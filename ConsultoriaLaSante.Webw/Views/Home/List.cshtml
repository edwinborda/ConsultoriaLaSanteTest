@model IEnumerable<ConsultoriaLaSante.Web.Models.InvoiceViewModel>
@{
    ViewBag.Title = "Lista de formularios";
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<div class="card">
    <div class="card-header">
        <h3>Listado de formularios</h3>
    </div>
    <div class="card-body">
        <div class="form-inline">
            <div class="col-lg-4">
                <h5>
                    <a class="btn btn-link" data-toggle="collapse" href="#filters" role="button" aria-expanded="true" aria-controls="filters">Filtros:</a>
                </h5>
            </div>
            <div class="col-lg-5 text-left">
                <div class="form-inline-row">
                    <div class="row">
                        <div class="col-lg-6">
                            <button type="button" id="btnMore" class="btn btn-sm btn-outline-primary">Más condiciones</button>
                        </div>
                        <div class="col-lg-6">
                            <button type="button" id="btnLess" style="display:none" class="btn btn-sm btn-outline-secondary">Menos condiciones</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 text-left">
                <input type="checkbox" id="chkSeeDelete" />Ver formularios eliminados
            </div>
        </div>
        <div id="filters" class="collapse show">
            <div class="filter">
                <div class="col-lg-12 form-inline form-filter">
                    <div class="col-lg-4">
                        <label>Campos</label>
                        <select class="form-control" id="field">
                            <option value="FormNumber:string">Número de formulario</option>
                            <option value="BillNumber:string">Número de factura</option>
                            <option value="PurchaseOrder:string">Orden de compra</option>
                            <option value="Nit:string">Nit Proveedor</option>
                            <option value="Name:string">Nombre Proveedor</option>
                        </select>
                    </div>
                    <div class="col-lg-4">
                        <label>Operación</label>
                        <select class="form-control" id="operator">
                            <option value="eq">igual</option>
                            <option value="gt">Mayor que</option>
                            <option value="lt">Menor que</option>
                            <option value="contains">Contiene</option>
                        </select>
                    </div>
                    <div class="col-lg-4">
                        <label>Valor</label>
                        <input type="text" class="form-control" id="value" />
                    </div>
                </div>
            </div>

        </div>
        <div>
            <button type="button" id="btnFilter" class="btn btn-sm btn-secondary">Filtrar</button>
        </div>
        <div class="space"></div>
        <table id="invoicesTb" class="table table-responsive-xl" cellspacing="0">
            <thead>
                <tr>
                    <th>Número de Radicado</th>
                    <th>Número de factura</th>
                    <th>Orden de compra</th>
                    <th>Nit Proveedor</th>
                    <th>Nombre Proveedor</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a href="/home/Edit/@item.FormNumber">@item.FormNumber</a></td>
                        <td>@item.BillNumber</td>
                        <td>@item.PurchaseOrder</td>
                        <td>@item.Nit</td>
                        <td>@item.Name</td>
                        <td><a href="/home/deleteForm/@item.FormNumber">Eliminar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/Scripts/Invoices/List.js"></script>
}