@model ConsultoriaLaSante.Web.Models.InvoiceViewModel
@{
    ViewBag.Title = "Index";
}

<center><h4 class="form-title">FORMULARIO DE INGRESO DE DATOS</h4></center>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Success
    </div>
}

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("EditForm", "home", FormMethod.Post))
        {
            <div class="form-group">
                <div class="col-lg-3">@Html.LabelFor(m => m.FormNumber)</div>
                <div class="col-lg-9">
                   @Html.ValueFor(m=>m.FormNumber)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">@Html.LabelFor(m => m.BillNumber)</div>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.BillNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BillNumber)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">@Html.LabelFor(m => m.PurchaseOrder)</div>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.PurchaseOrder, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PurchaseOrder)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">@Html.LabelFor(m => m.Nit)</div>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Nit, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nit)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-3">@Html.LabelFor(m => m.Name)</div>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12"><button type="submit" class="btn btn-success">Editar</button></div>
            </div>
        }
    </div>
</div>


