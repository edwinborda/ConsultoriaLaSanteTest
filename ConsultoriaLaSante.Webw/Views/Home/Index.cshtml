@model ConsultoriaLaSante.Web.Models.InvoiceViewModel
@{
    ViewBag.Title = "Index";
}

<center><h4 class="form-title">FORMULARIO DE INGRESO DE DATOS</h4></center>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Success
    </div>
}

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("Index", "home", FormMethod.Post))
        {
            <div class="form-inline mar">
                <div class="col-lg-3 text-left">@Html.LabelFor(m => m.BillNumber)</div>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.BillNumber, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.BillNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-inline">
                <div class="col-lg-3 text-left">@Html.LabelFor(m => m.PurchaseOrder)</div>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.PurchaseOrder, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PurchaseOrder, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-inline">
                <div class="col-lg-3 text-left">@Html.LabelFor(m => m.Nit)</div>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Nit, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nit, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-inline">
                <div class="col-lg-3 text-left">@Html.LabelFor(m => m.Name)</div>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-right">
                <div class="col-lg-12"><button type="submit" class="btn btn-success">Crear</button></div>
            </div>
        }
    </div>
</div>

