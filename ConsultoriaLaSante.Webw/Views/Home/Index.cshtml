@model ConsultoriaLaSante.Web.Models.InvoiceViewModel
@{
    ViewBag.Title = "Index";
}

    <center><h4 class="form-title">FORMULARIO DE INGRESO DE DATOS</h4></center>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("CreateForm", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <div class="col-lg-4">@Html.LabelFor(m => m.billOrder)</div>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.billOrder, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.billOrder)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-4">@Html.LabelFor(m => m.PurchaseOrder)</div>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.PurchaseOrder, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PurchaseOrder)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-4">@Html.LabelFor(m => m.Nit)</div>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.Nit, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nit)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-4">@Html.LabelFor(m => m.Name)</div>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12"><button type="submit" class="btn btn-success">Crear</button></div>
            </div>
        }
    </div>
</div>

